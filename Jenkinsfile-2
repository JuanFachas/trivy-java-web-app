pipeline {
  agent any
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Build') {
      steps {
        sh 'docker build -t darinpope/java-web-app:latest .'
      }
    }
    stage('Scan') {
      steps {
        sh 'which trivy || echo "Trivy no encontrado"'
        sh 'trivy --version || echo "No se pudo ejecutar Trivy"'
        sh 'trivy --quiet --exit-code 1 --severity HIGH,CRITICAL darinpope/java-web-app:latest'
      }
    }
  }
}
