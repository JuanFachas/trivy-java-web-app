pipeline {
  agent any
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Build') {
      steps {
        sh 'docker build --no-cache -t darinpope/trivy-java-web-app:latest .'
      }
    }
    stage('Scan') {
      steps {
        sh 'trivy image --format html --output resultado-1.html darinpope/trivy-java-web-app:latest'
      }
    }
  }
  post {
    always {
      archiveArtifacts artifacts: 'resultado-1.html', fingerprint: true
    }
  }
}
