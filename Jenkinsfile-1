pipeline {
  agent any
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Build') {
      steps {
        sh 'docker build -t darinpope/trivy-java-web-app:latest .'
      }
    }
    stage('Scan') {
      steps {
        sh 'trivy image darinpope/trivy-java-web-app:latest'
      }
    }
  }
}
