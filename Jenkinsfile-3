pipeline {
  agent any
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Build') {
      steps {
        sh 'docker build -t darinpope/java-web-app:latest .'
      }
    }
    stage('Scan') {
      steps {
        sh 'trivy image --quiet --exit-code 1 --severity MEDIUM,HIGH,CRITICAL darinpope/java-web-app:latest'
      }
    }
  }
}
